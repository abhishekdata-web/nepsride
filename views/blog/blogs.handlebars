<style>
    .video-container {
        position: relative;
        padding-bottom: 56.25%;
        padding-top: 30px;
        height: 0;
        overflow: hidden;
    }

    .video-container iframe,
    .video-container object,
    .video-container embed {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
</style>

<div class="container" style="color: #000;padding-top:5vh;padding-bottom:4vh;">
    <div class="row">
        <div class="col-md-9">
            {{#each blogs}}
            <div style="margin-bottom: 60px;">
                <h3 style="font-weight: bolder;">{{title}}</h3>
                <div>
                    <span>{{author}}</span>
                    <span style="float: right;">{{formatDate date "MMMM Do YYYY"}}</span>
                </div>
                <img src="{{thumbnail}}" style="width: 100%;">
                <p>
                    {{{truncate body 195}}}
                </p>
                <a href="/blog-detail/{{slug}}" class="btn" style="background:#000;color:#fff;">Read more</a>
            </div>
            {{else}}
            {{/each}}
        </div>
        <div class="col-md-3">
            <img src="/img/smartphone-car.jpg" style="width: 100%;">
            <p style="font-size: 17px;font-weight:bold;margin:10px 0;">Sign up and earn with Nepsride</p>
            <a href="/admin-driver-register" class="btn" style="background:#000;color:#fff;">Drive with Nepsride</a>
        </div>
    </div>
</div>

<br>

<div class="container">
    <nav aria-label="Page navigation example">
        <ul class="flex-wrap pagination">
            {{#paginate current=current pages=pages}}{{/paginate}}
        </ul>
    </nav>
</div>