<style>
    body {
        background: #f1f1f1;
    }

    input {
        padding: 20px !important;
    }
</style>

<section>
    <div class="container">
        <div style="padding-top: 5vh;padding-bottom: 15vh;color:#000">
            <h3 class="search-form" style="margin-bottom:10px;text-align: left;font-weight:bolder;">Edit the  post</h3>
            <h5 class="search-form" style="color: #444;margin-bottom:10px;font-size:17px;text-align: left;">Please add
                the pictures to the cloudinary first, if needed</h5>
            <br>
            <form class="search-form" method="POST" action="/edit-blog/{{blog._id}}?_method=PUT">
                <input type="text" class="form-control" name="thumbnail" placeholder="Enter thumbnail url" value="{{blog.thumbnail}}">
                <input type="text" name="title" class="form-control" placeholder="Enter the title" value="{{blog.title}}">
                <input type="text" name="author" class="form-control" placeholder="Enter the author" value="{{blog.author}}">
                <textarea name="body" id="body">{{blog.body}}</textarea>
                <button class="btn"
                    style="font-weight:bold;margin-top: 20px;color:#fff;background: rgb(17, 147, 154);width: 100%;padding:11px 20px;text-align: left;">
                    CREATE POST
                   <img src="/img/svg/long-arrow-right.svg" style="float: right;margin-top:2px;width:14px;">
                </button>
            </form>
        </div>
    </div>
</section>